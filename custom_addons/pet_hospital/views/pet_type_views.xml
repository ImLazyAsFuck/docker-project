<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="pet_type_tree_view" model="ir.ui.view">
        <field name="name">pet.type.tree</field>
        <field name="model">pet.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="pet_type_form_view" model="ir.ui.view">
        <field name="name">pet.type.form</field>
        <field name="model">pet.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>

                    <notebook>
                        <page string="Breeds">
                            <field name="breed_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pet_type" model="ir.actions.act_window">
        <field name="name">Pet Types</field>
        <field name="res_model">pet.type</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
