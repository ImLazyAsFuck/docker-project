<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="pet_pet_tree_view" model="ir.ui.view">
        <field name="name">pet.pet.tree</field>
        <field name="model">pet.pet</field>
        <field name="arch" type="xml">
            <tree>
                <field name="image" widget="image"/>
                <field name="code"/>
                <field name="name"/>
                <field name="owner_id"/>
                <field name="pet_type_id"/>
                <field name="pet_breed_id"/>
                <field name="age"/>
            </tree>
        </field>
    </record>

    <record id="pet_pet_kanban_view" model="ir.ui.view">
        <field name="name">pet.pet.kanban</field>
        <field name="model">pet.pet</field>
        <field name="arch" type="xml">
            <kanban default_group_by="pet_type_id">
                <field name="image"/>
                <field name="name"/>
                <field name="code"/>
                <field name="owner_id"/>
                <field name="pet_type_id"/>
                <field name="pet_breed_id"/>
                <field name="age"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_image">
                                    <img t-if="record.image.raw_value" t-att-src="image_data_uri(record.image.raw_value)"/>
                                </div>
                                <div class="o_kanban_details">
                                    <strong>
                                        <t t-esc="record.name.value"/>
                                    </strong>
                                    <div>
                                        <span>Mã: </span>
                                        <t t-esc="record.code.value"/>
                                    </div>
                                    <div t-if="record.owner_id.value">
                                        <span>Chủ: </span>
                                        <t t-esc="record.owner_id.value"/>
                                    </div>
                                    <div t-if="record.pet_type_id.value">
                                        <span>Loại: </span>
                                        <t t-esc="record.pet_type_id.value"/>
                                    </div>
                                    <div t-if="record.pet_breed_id.value">
                                        <span>Giống: </span>
                                        <t t-esc="record.pet_breed_id.value"/>
                                    </div>
                                    <div t-if="record.age.value">
                                        <span>Tuổi: </span>
                                        <t t-esc="record.age.value"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="pet_pet_form_view" model="ir.ui.view">
        <field name="name">pet.pet.form</field>
        <field name="model">pet.pet</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <notebook>
                        <page string="Thông tin chung">
                            <group>
                                <field name="image" widget="image"/>
                                <group>
                                    <field name="code" readonly="1"/>
                                    <field name="name"/>
                                    <field name="dob"/>
                                    <field name="age" readonly="1"/>
                                </group>
                            </group>

                            <group string="Phân loại">
                                <field name="pet_type_id"/>
                                <field name="pet_breed_id"
                                       domain="[('type_id', '=', pet_type_id)]"/>
                            </group>

                            <group string="Chủ nuôi">
                                <field name="owner_id"/>
                                <field name="owner_phone" readonly="1"/>
                                <field name="owner_address" readonly="1"/>
                            </group>
                        </page>

                        <page string="Lịch sử tiêm">
                            <field name="vaccination_ids">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="vaccine_type"/>
                                    <field name="next_date"/>
                                    <field name="doctor_id"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Lịch sử khám">
                            <field name="medical_history_ids">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="doctor_id"/>
                                    <field name="symptoms"/>
                                    <field name="diagnosis"/>
                                    <field name="treatment"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pet_pet_search_view" model="ir.ui.view">
        <field name="name">pet.pet.search</field>
        <field name="model">pet.pet</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="owner_id"/>
                <field name="pet_breed_id"/>
                <filter string="Theo loại" name="group_by_type" context="{'group_by': 'pet_type_id'}"/>
            </search>
        </field>
    </record>

    <record id="action_pet_pet" model="ir.actions.act_window">
        <field name="name">Thú cưng</field>
        <field name="res_model">pet.pet</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="pet_pet_search_view"/>
    </record>

</odoo>
