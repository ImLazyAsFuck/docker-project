<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="module_category_pet_hospital" model="ir.module.category">
            <field name="name">Pet Hospital</field>
            <field name="description">Quản lý bệnh viện thú cưng</field>
            <field name="sequence">50</field>
        </record>

        <record id="group_pet_user" model="res.groups">
            <field name="name">Nhân viên</field>
            <field name="category_id" ref="module_category_pet_hospital"/>
            <field name="comment">Nhân viên - chỉ xem/tạo dữ liệu của mình</field>
        </record>

        <record id="group_pet_manager" model="res.groups">
            <field name="name">Quản lý</field>
            <field name="category_id" ref="module_category_pet_hospital"/>
            <field name="comment">Quản lý - full quyền truy cập</field>
            <field name="implied_ids" eval="[(4, ref('group_pet_user'))]"/>
        </record>

    </data>
</odoo>
